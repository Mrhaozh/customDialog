/* pages/modal/modal.wxss */
.content {
 position: absolute;
  top:0;
  left: 0;
  z-index: 1000;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.64)
}

.model {
  margin-left: 50rpx;
  margin-right: 50rpx;
 padding-top:40rpx;
  border:1rpx solid #AFAFAF;
  border-radius: 16rpx;
  width: 100%;
  text-align: center;
  background: #FFF;
}
.model input{
  text-align: left;
  height: 80rpx;
  border-bottom: 2rpx solid #999999;
  padding:0 15rpx 0 15rpx;
   margin: 15rpx 50rpx 15rpx 50rpx;
}
.bottom{
  margin-top:80rpx;
  width: 100%;
  display: flex;
  flex: row;
  justify-content: center;
  align-items: right;
  white-space: normal;
  border-top: 2rpx solid #dedede;
}
.btn-cancel {
  flex: 1;
  color: #000000;
  text-align: center;
  border-right: 1px solid #dedede;
  padding:20rpx 0;
}
.btn-confirm {
  flex: 1;
  color: #3cc51f;
  text-align: center;
   padding:20rpx 0;
}
